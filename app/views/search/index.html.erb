<article>
  <form method="get" class="search">
    <input type="search" name="postcode" placeholder="Postcode">
    <input type="submit" value="Search" class="button">
  </form>

  <section class="results">
    <% if @coffee_shops.empty? && @postcode %>
      <p>There are no results, please search again</p>
      <p><%= link_to 'Reset Search', root_path %></p>
    <% else %>
      <ul class="coffee-shops">
        <%= render @coffee_shops %>
      </ul>
    <% end %>
  </section>
</article>